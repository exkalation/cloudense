{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitHelpers": true,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
